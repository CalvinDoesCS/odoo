<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend belt rank config form with curriculum tab and extra fields -->
    <record id="view_belt_rank_config_dojo_ranks_ext" model="ir.ui.view">
        <field name="name">disaster.belt.rank.config.dojo.ranks.ext</field>
        <field name="model">disaster.belt.rank.config</field>
        <field name="inherit_id" ref="disaster_member_belts.view_disaster_belt_rank_config_form"/>
        <field name="arch" type="xml">

            <!-- Add member count stat button -->
            <xpath expr="//sheet" position="before">
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_members_at_rank"
                            class="oe_stat_button" icon="fa-users" invisible="not id">
                        <field name="dojo_member_count" widget="statinfo" string="Members"/>
                    </button>
                </div>
            </xpath>

            <!-- Add extra fields after existing group -->
            <xpath expr="//sheet//group[last()]" position="after">
                <group string="Promotion Requirements">
                    <field name="dojo_min_days_in_rank"/>
                </group>
            </xpath>

            <!-- Add curriculum page -->
            <xpath expr="//notebook" position="inside">
                <page string="Curriculum" name="dojo_curriculum">
                    <field name="dojo_curriculum_ids">
                        <list editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="content_id" options="{'no_create': False}"/>
                            <field name="required_for_promotion"/>
                        </list>
                    </field>
                </page>
                <page string="Promotion History" name="dojo_history">
                    <field name="dojo_history_ids" readonly="1">
                        <list>
                            <field name="awarded_dt"/>
                            <field name="member_id"/>
                            <field name="awarded_by_id"/>
                            <field name="belt_test_id"/>
                        </list>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
