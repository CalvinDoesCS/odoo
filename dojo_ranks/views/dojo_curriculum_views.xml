<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════ Curriculum Content Form ═══════════ -->
    <record id="view_dojo_curriculum_content_form" model="ir.ui.view">
        <field name="name">dojo.curriculum.content.form</field>
        <field name="model">dojo.curriculum.content</field>
        <field name="arch" type="xml">
            <form string="Curriculum Content">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Content Title…"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="content_type"/>
                            <field name="visibility"/>
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="url" invisible="content_type not in ['link','video']"/>
                            <field name="attachment_id" invisible="content_type == 'link'"/>
                            <field name="tag_ids" widget="many2many_tags"
                                   options="{'color_field': 'color', 'no_create_edit': False}"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description / notes to instructors…"/>
                    <div class="oe_grey" invisible="content_type != 'video' or not url">
                        <p>Video URL will be embedded on the member portal and kiosk.</p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dojo_curriculum_content_list" model="ir.ui.view">
        <field name="name">dojo.curriculum.content.list</field>
        <field name="model">dojo.curriculum.content</field>
        <field name="arch" type="xml">
            <list string="Curriculum Library">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="content_type"/>
                <field name="visibility" optional="show"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="active" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_dojo_curriculum_content_kanban" model="ir.ui.view">
        <field name="name">dojo.curriculum.content.kanban</field>
        <field name="model">dojo.curriculum.content</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="content_type"/>
                <field name="visibility"/>
                <field name="tag_ids"/>
                <templates>
                    <t t-name="kanban-card">
                        <div class="oe_kanban_global_click">
                            <strong><field name="name"/></strong>
                            <div class="text-muted small mt-1">
                                <field name="content_type"/> ·
                                <field name="visibility"/>
                            </div>
                            <div>
                                <field name="tag_ids" widget="many2many_tags"
                                       options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_dojo_curriculum_content" model="ir.actions.act_window">
        <field name="name">Curriculum Library</field>
        <field name="res_model">dojo.curriculum.content</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!-- Content Tags -->
    <record id="action_dojo_curriculum_tag" model="ir.actions.act_window">
        <field name="name">Content Tags</field>
        <field name="res_model">dojo.curriculum.tag</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
