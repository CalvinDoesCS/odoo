<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extend session form: capacity indicators + roster tab + Book button -->
    <record id="view_class_session_dojo_attendance_ext" model="ir.ui.view">
        <field name="name">disaster.class.session.attendance.ext</field>
        <field name="model">disaster.class.session</field>
        <field name="inherit_id" ref="disaster_member_belts.view_class_session_form"/>
        <field name="arch" type="xml">

            <!-- Roster stat button -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_roster" type="object"
                        class="oe_stat_button" icon="fa-list-ul">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="booked_count"/>/<field name="capacity"/>
                        </span>
                        <span class="o_stat_text">Booked</span>
                    </div>
                </button>
                <button name="action_view_roster" type="object"
                        class="oe_stat_button" icon="fa-clock-o"
                        invisible="waitlist_count == 0">
                    <field name="waitlist_count" widget="statinfo" string="Waitlist"/>
                </button>
            </xpath>

            <!-- Book member button in header -->
            <xpath expr="//header" position="inside">
                <button name="action_book_member" type="object"
                        string="Book Member"
                        class="btn-primary"
                        invisible="state in ['done','cancelled']"/>
                <button name="action_sync_roster" type="object"
                        string="Sync Roster"
                        class="btn-secondary"
                        title="Auto-add all enrolled course members to the roster"
                        invisible="state in ['done','cancelled']"/>
            </xpath>


        </field>
    </record>

</odoo>
