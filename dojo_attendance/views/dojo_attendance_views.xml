<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_dojo_attendance_logs" model="ir.actions.act_window">
        <field name="name">Attendance Logs</field>
        <field name="res_model">dojo.attendance.log</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        id="menu_dojo_attendance_root"
        name="Attendance"
        sequence="30"
        web_icon="dojo_attendance,static/description/icon.png"
    />
    <menuitem
        id="menu_dojo_attendance_logs"
        name="Attendance Logs"
        parent="menu_dojo_attendance_root"
        action="action_dojo_attendance_logs"
        sequence="10"
    />

    <record id="view_dojo_attendance_log_list" model="ir.ui.view">
        <field name="name">dojo.attendance.log.list</field>
        <field name="model">dojo.attendance.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="session_id"/>
                <field name="member_id"/>
                <field name="status"/>
                <field name="checkin_datetime"/>
            </list>
        </field>
    </record>

    <record id="view_dojo_attendance_log_form" model="ir.ui.view">
        <field name="name">dojo.attendance.log.form</field>
        <field name="model">dojo.attendance.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="session_id"/>
                        <field name="member_id"/>
                        <field name="enrollment_id"/>
                        <field name="status"/>
                        <field name="checkin_datetime"/>
                    </group>
                    <group>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
