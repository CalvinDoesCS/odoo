<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rule_dojo_attendance_instructor_company" model="ir.rule">
        <field name="name">Attendance Instructor Company</field>
        <field name="model_id" ref="model_dojo_attendance_log"/>
        <field name="groups" eval="[(4, ref('dojo_base.group_dojo_instructor'))]"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="rule_dojo_attendance_parent_self_or_household" model="ir.rule">
        <field name="name">Attendance Parent Self or Household</field>
        <field name="model_id" ref="model_dojo_attendance_log"/>
        <field name="groups" eval="[(4, ref('dojo_base.group_dojo_parent_student'))]"/>
        <field name="domain_force">['|', ('member_id.partner_id', '=', user.partner_id.id), ('member_id.household_id.primary_guardian_id.partner_id', '=', user.partner_id.id)]</field>
    </record>
</odoo>
