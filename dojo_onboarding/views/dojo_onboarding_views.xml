<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ── Onboarding Record: List View ─────────────────────────────────── -->
    <record id="view_dojo_onboarding_record_list" model="ir.ui.view">
        <field name="name">dojo.onboarding.record.list</field>
        <field name="model">dojo.onboarding.record</field>
        <field name="arch" type="xml">
            <list string="Onboarding Records" decoration-success="state == 'completed'"
                  decoration-info="state == 'in_progress'">
                <field name="member_id"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-warning="state == 'in_progress'"/>
                <field name="progress_pct" widget="progressbar"/>
                <field name="step_member_info" optional="show" widget="boolean_toggle"/>
                <field name="step_household" optional="show" widget="boolean_toggle"/>
                <field name="step_enrollment" optional="show" widget="boolean_toggle"/>
                <field name="step_subscription" optional="show" widget="boolean_toggle"/>
                <field name="step_portal_access" optional="show" widget="boolean_toggle"/>
                <field name="create_date" string="Started On" optional="show"/>
            </list>
        </field>
    </record>

    <!-- ── Onboarding Record: Form View ─────────────────────────────────── -->
    <record id="view_dojo_onboarding_record_form" model="ir.ui.view">
        <field name="name">dojo.onboarding.record.form</field>
        <field name="model">dojo.onboarding.record</field>
        <field name="arch" type="xml">
            <form string="Onboarding Record">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="member_id" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Progress">
                            <field name="progress_pct" widget="progressbar" nolabel="1"/>
                        </group>
                    </group>
                    <group string="Completed Steps">
                        <group>
                            <field name="step_member_info" widget="boolean_toggle"/>
                            <field name="step_household" widget="boolean_toggle"/>
                            <field name="step_enrollment" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="step_subscription" widget="boolean_toggle"/>
                            <field name="step_portal_access" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ── Onboarding Record: Action ────────────────────────────────────── -->
    <record id="action_dojo_onboarding_records" model="ir.actions.act_window">
        <field name="name">Onboarding Records</field>
        <field name="res_model">dojo.onboarding.record</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- ── Menus ─────────────────────────────────────────────────────────── -->
    <menuitem id="menu_dojo_onboarding_root"
              name="Onboarding"
              sequence="5"
              groups="dojo_base.group_dojo_admin,dojo_base.group_dojo_instructor"/>

    <menuitem id="menu_dojo_onboarding_new"
              name="New Member"
              parent="menu_dojo_onboarding_root"
              action="action_dojo_onboarding_wizard"
              sequence="1"
              groups="dojo_base.group_dojo_admin,dojo_base.group_dojo_instructor"/>

    <menuitem id="menu_dojo_onboarding_records"
              name="Onboarding Records"
              parent="menu_dojo_onboarding_root"
              action="action_dojo_onboarding_records"
              sequence="2"
              groups="dojo_base.group_dojo_admin,dojo_base.group_dojo_instructor"/>

    <!-- ── Smart button injected into the Member form ───────────────────── -->
    <record id="view_dojo_member_form_onboarding_btn" model="ir.ui.view">
        <field name="name">dojo.member.form.onboarding.button</field>
        <field name="model">dojo.member</field>
        <field name="inherit_id" ref="dojo_base.view_dojo_member_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <!-- Show 'Start Onboarding' only when no record exists yet -->
                <button name="%(dojo_onboarding.action_dojo_onboarding_wizard)d"
                        type="action"
                        class="oe_stat_button"
                        icon="fa-magic"
                        string="Start Onboarding"
                        invisible="onboarding_count != 0 or membership_state != 'lead'"
                        groups="dojo_base.group_dojo_admin,dojo_base.group_dojo_instructor"/>
                <!-- Show onboarding record count when already onboarded -->
                <button name="action_view_onboarding_records"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-check-circle"
                        invisible="onboarding_count == 0"
                        groups="dojo_base.group_dojo_admin,dojo_base.group_dojo_instructor">
                    <div class="o_stat_info">
                        <span class="o_stat_value"><field name="onboarding_count"/></span>
                        <span class="o_stat_text">Onboarding</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
