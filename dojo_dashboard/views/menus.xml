<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Client action â€” tag must match registry.category("actions").add(TAG, Cls) -->
    <record id="action_dojo_dashboard" model="ir.actions.client">
        <field name="name">Dojo Dashboard</field>
        <field name="tag">dojo_dashboard.action</field>
        <field name="target">main</field>
    </record>

    <!-- Top-level app icon in the home menu (sequence=-200 puts it near the left) -->
    <menuitem
        id="menu_dojo_dashboard_root"
        name="Dojo Dashboard"
        action="action_dojo_dashboard"
        web_icon="dojo_dashboard,static/description/icon.png"
        sequence="-200"
        groups="base.group_user"/>

</odoo>
