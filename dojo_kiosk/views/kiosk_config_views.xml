<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════════════════════════════════════════════════════════
         dojo.kiosk.config  – Form
    ═══════════════════════════════════════════════════════════════════ -->
    <record id="view_dojo_kiosk_config_form" model="ir.ui.view">
        <field name="name">dojo.kiosk.config.form</field>
        <field name="model">dojo.kiosk.config</field>
        <field name="arch" type="xml">
            <form string="Kiosk Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group string="Identity">
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                        <group string="Behaviour">
                            <field name="idle_timeout_sec" />
                            <field name="allow_walk_in" />
                            <field name="default_session_id" />
                        </group>
                    </group>
                    <group string="Staff Panel">
                        <field name="staff_pin" password="True"/>
                    </group>
                    <group string="Messages">
                        <field name="welcome_message" />
                        <field name="success_message" />
                        <field name="show_belt_rank" />
                        <field name="show_attendance_count" />
                    </group>
                </sheet>
                <chatter />
            </form>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════
         dojo.kiosk.config  – List
    ═══════════════════════════════════════════════════════════════════ -->
    <record id="view_dojo_kiosk_config_list" model="ir.ui.view">
        <field name="name">dojo.kiosk.config.list</field>
        <field name="model">dojo.kiosk.config</field>
        <field name="arch" type="xml">
            <list string="Kiosk Configurations">
                <field name="name" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="idle_timeout_sec" />
                <field name="allow_walk_in" />
                <field name="default_session_id" />
                <field name="active" widget="boolean_toggle" />
            </list>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════
         Actions
    ═══════════════════════════════════════════════════════════════════ -->
    <record id="action_dojo_kiosk_config" model="ir.actions.act_window">
        <field name="name">Kiosk Settings</field>
        <field name="res_model">dojo.kiosk.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_open_kiosk" model="ir.actions.client">
        <field name="name">Open Kiosk</field>
        <field name="tag">dojo_kiosk.kiosk_action</field>
    </record>

</odoo>
