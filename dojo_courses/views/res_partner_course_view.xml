<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Extend res.partner form â€“ add Course smart buttons
         Inherits the belt-rank form view added by disaster_member_belts.
    ============================================================ -->
    <record id="view_partner_course_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.course.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="disaster_member_belts.view_partner_belt_rank_form"/>
        <field name="arch" type="xml">

            <!-- Add Courses (enrolled) smart button for members -->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_enrolled_courses"
                    icon="fa-graduation-cap"
                    invisible="not is_member"
                >
                    <field name="enrolled_course_count" widget="statinfo" string="Courses"/>
                </button>

                <!-- Courses Led (instructor) -->
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_led_courses"
                    icon="fa-chalkboard-teacher"
                    invisible="not is_instructor"
                >
                    <field name="led_course_count" widget="statinfo" string="Courses Led"/>
                </button>
            </xpath>

        </field>
    </record>

</odoo>
