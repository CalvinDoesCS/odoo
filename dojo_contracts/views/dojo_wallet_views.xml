<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════ Wallet Form ═══════════ -->
    <record id="view_dojo_wallet_form" model="ir.ui.view">
        <field name="name">dojo.wallet.form</field>
        <field name="model">dojo.wallet</field>
        <field name="arch" type="xml">
            <form string="Member Wallet">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_transactions" type="object"
                                class="oe_stat_button" icon="fa-list">
                            <field name="tx_count" widget="statinfo" string="Transactions"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="partner_id"/>
                        <h1><field name="partner_id" options="{'no_create': True}"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="balance" widget="monetary"/>
                            <field name="credit_balance"/>
                            <field name="currency_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Transaction History">
                            <field name="tx_ids" readonly="1">
                                <list>
                                    <field name="create_date" string="Date"/>
                                    <field name="tx_type"/>
                                    <field name="description"/>
                                    <field name="amount" widget="monetary"/>
                                    <field name="credits"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ═══════════ Wallet List ═══════════ -->
    <record id="view_dojo_wallet_list" model="ir.ui.view">
        <field name="name">dojo.wallet.list</field>
        <field name="model">dojo.wallet</field>
        <field name="arch" type="xml">
            <list string="Member Wallets">
                <field name="partner_id"/>
                <field name="balance" widget="monetary"/>
                <field name="credit_balance"/>
                <field name="currency_id"/>
                <field name="tx_count"/>
            </list>
        </field>
    </record>

    <!-- ═══════════ Wallet Action ═══════════ -->
    <record id="action_dojo_wallet" model="ir.actions.act_window">
        <field name="name">Member Wallets</field>
        <field name="res_model">dojo.wallet</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No wallets yet. They are created when a member makes a purchase or receives credits.</p>
        </field>
    </record>

    <!-- ═══════════ Tx List ═══════════ -->
    <record id="view_dojo_wallet_tx_list" model="ir.ui.view">
        <field name="name">dojo.wallet.tx.list</field>
        <field name="model">dojo.wallet.tx</field>
        <field name="arch" type="xml">
            <list string="Wallet Transactions" create="0" delete="0">
                <field name="create_date" string="Date"/>
                <field name="partner_id"/>
                <field name="tx_type"/>
                <field name="description"/>
                <field name="amount" widget="monetary"/>
                <field name="credits"/>
                <field name="ref_model"/>
            </list>
        </field>
    </record>

    <record id="view_dojo_wallet_tx_search" model="ir.ui.view">
        <field name="name">dojo.wallet.tx.search</field>
        <field name="model">dojo.wallet.tx</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="description"/>
                <separator/>
                <filter string="Earn / Top-up" name="earn" domain="[('tx_type','=','earn')]"/>
                <filter string="Spend" name="spend" domain="[('tx_type','=','spend')]"/>
                <filter string="Refund" name="refund" domain="[('tx_type','=','refund')]"/>
                <group>
                    <filter name="group_member" string="Member" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_type" string="Type" context="{'group_by': 'tx_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_dojo_wallet_tx" model="ir.actions.act_window">
        <field name="name">Wallet Transactions</field>
        <field name="res_model">dojo.wallet.tx</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
