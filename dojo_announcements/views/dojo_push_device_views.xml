<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_dojo_push_device_list" model="ir.ui.view">
        <field name="name">dojo.push.device.list</field>
        <field name="model">dojo.push.device</field>
        <field name="arch" type="xml">
            <list string="Push Devices">
                <field name="partner_id"/>
                <field name="platform"/>
                <field name="app_version" optional="show"/>
                <field name="last_seen_dt"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_dojo_push_device_form" model="ir.ui.view">
        <field name="name">dojo.push.device.form</field>
        <field name="model">dojo.push.device</field>
        <field name="arch" type="xml">
            <form string="Push Device">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}"/>
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="platform"/>
                        </group>
                        <group>
                            <field name="token"/>
                            <field name="app_version"/>
                            <field name="last_seen_dt" readonly="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dojo_push_device" model="ir.actions.act_window">
        <field name="name">Push Devices</field>
        <field name="res_model">dojo.push.device</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
