/* --- PIN screen -------------------------------------------------- */
.kiosk-pin-screen {
    align-items: center;
    justify-content: center;
    background: #0f1117;
}

.kiosk-pin-card {
    background: #1a1a2e;
    border-radius: 20px;
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    min-width: 320px;
    box-shadow: 0 16px 50px rgba(0, 0, 0, 0.5);
}

.kiosk-pin-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #c9a96e;
}

.kiosk-pin-error {
    color: #f87171;
    font-size: 0.9rem;
    background: rgba(248, 113, 113, 0.1);
    border: 1px solid rgba(248, 113, 113, 0.3);
    padding: 0.4rem 1rem;
    border-radius: 8px;
}

.kiosk-pin-dots {
    display: flex;
    gap: 1rem;
}

.pin-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #444;
    background: transparent;
    transition: background 0.15s, border-color 0.15s;
}

.pin-dot.filled {
    background: #c9a96e;
    border-color: #c9a96e;
}

.kiosk-numpad {
    display: grid;
    grid-template-columns: repeat(3, 72px);
    gap: 0.75rem;
}

.kiosk-num-btn,
.kiosk-del-btn {
    width: 72px;
    height: 72px;
    border-radius: 50%;
    border: none;
    background: #252540;
    color: #e8e8ee;
    font-size: 1.3rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.15s;
}

.kiosk-num-btn:hover {
    background: #32325a;
}

.kiosk-del-btn {
    background: #2a1832;
    color: #f87171;
}

.kiosk-del-btn:hover {
    background: #3d1f40;
}

.kiosk-num-empty {
    width: 72px;
    height: 72px;
}

.kiosk-pin-actions {
    display: flex;
    gap: 1rem;
    width: 100%;
    justify-content: center;
    margin-top: 0.5rem;
}

.kiosk-pin-cancel {
    padding: 0.65rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    color: #888;
    background: rgba(255, 255, 255, 0.05);
    transition: background 0.2s;
}

.kiosk-pin-cancel:hover {
    background: rgba(255, 255, 255, 0.1);
}

.kiosk-pin-submit {
    padding: 0.65rem 1.5rem;
    border-radius: 10px;
    border: none;
    background: #c9a96e;
    color: #111;
    font-weight: 700;
    cursor: pointer;
    transition: background 0.2s, opacity 0.2s;
}

.kiosk-pin-submit:disabled {
    opacity: 0.35;
    cursor: not-allowed;
}

.kiosk-pin-submit:not(:disabled):hover {
    background: #dbbf7e;
}

/* --- Scrollbar tweaks (Webkit) ----------------------------------- */
.kiosk-results::-webkit-scrollbar {
    width: 6px;
}

.kiosk-results::-webkit-scrollbar-track {
    background: transparent;
}

.kiosk-results::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 3px;
}