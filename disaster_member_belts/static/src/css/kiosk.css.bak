/* --- Reset / base ------------------------------------------------ */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html,
body {
    width: 100%;
    height: 100%;
    overflow: hidden;
    background: #0f1117;
    font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
}

/* --- Root container --------------------------------------------- */
.kiosk-root {
    position: fixed;
    inset: 0;
    display: flex;
    flex-direction: column;
    background: #0f1117;
    color: #e8e8ee;
}

/* --- Header bar -------------------------------------------------- */
.kiosk-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1.5rem;
    background: #1a1a2e;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    min-height: 64px;
    flex-shrink: 0;
}

.kiosk-logo img {
    width: 40px;
    height: 40px;
}

.kiosk-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #c9a96e;
    letter-spacing: 0.04em;
    margin-right: auto;
}

.kiosk-session-selector select {
    background: #2a2a45;
    border: 1px solid rgba(201, 169, 110, 0.4);
    color: #e8e8ee;
    padding: 0.4rem 0.8rem;
    border-radius: 8px;
    font-size: 0.9rem;
    cursor: pointer;
    outline: none;
}

.kiosk-no-session {
    color: #888;
    font-size: 0.9rem;
}

.kiosk-exit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    color: #888;
    text-decoration: none;
    transition: background 0.2s, color 0.2s;
}

.kiosk-exit-btn:hover {
    background: rgba(255, 255, 255, 0.12);
    color: #e8e8ee;
}

/* --- Mode tabs --------------------------------------------------- */
.kiosk-mode-tabs {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem 0;
    flex-shrink: 0;
}

.kiosk-mode-tab {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1.4rem;
    border-radius: 30px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.04);
    color: #888;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s, border-color 0.2s, color 0.2s;
}

.kiosk-mode-tab:hover {
    background: rgba(255, 255, 255, 0.08);
    color: #ccc;
    border-color: rgba(255, 255, 255, 0.2);
}

.kiosk-mode-tab.active {
    background: rgba(201, 169, 110, 0.15);
    border-color: #c9a96e;
    color: #c9a96e;
}

/* --- Generic check-in area -------------------------------------- */
.kiosk-checkin-area {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 2rem;
}

/* --- Barcode area ------------------------------------------------ */
.kiosk-barcode-prompt {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.2rem;
    text-align: center;
    pointer-events: none;
}

.kiosk-barcode-icon {
    opacity: 0.7;
    transition: opacity 0.2s, filter 0.2s;
}

.kiosk-barcode-icon.kiosk-barcode-error-flash {
    filter: invert(30%) sepia(100%) saturate(400%) hue-rotate(-20deg);
    opacity: 1;
}

.kiosk-barcode-text {
    font-size: 1.6rem;
    font-weight: 700;
    color: #e8e8ee;
}

.kiosk-barcode-sub {
    font-size: 1rem;
    color: #666;
}

/* Hidden input that captures hardware scanner keystrokes */
.kiosk-barcode-hidden-input {
    position: absolute;
    left: -9999px;
    width: 1px;
    height: 1px;
    opacity: 0;
}

/* --- Member PIN area -------------------------------------------- */
.kiosk-member-pin-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
}

.kiosk-pin-area-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #c9a96e;
}

.kiosk-member-pin-dots {
    display: flex;
    gap: 1rem;
}

.member-pin-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #444;
    background: transparent;
    transition: background 0.15s, border-color 0.15s;
}

.member-pin-dot.filled {
    background: #c9a96e;
    border-color: #c9a96e;
}

.kiosk-member-pin-error {
    color: #f87171;
    font-size: 0.9rem;
    background: rgba(248, 113, 113, 0.1);
    border: 1px solid rgba(248, 113, 113, 0.3);
    padding: 0.4rem 1.2rem;
    border-radius: 8px;
}

/* --- Name search area ------------------------------------------- */
.kiosk-search-area {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
}

.kiosk-search-box {
    position: relative;
    width: 100%;
    max-width: 720px;
}

.kiosk-search-icon {
    position: absolute;
    left: 1.4rem;
    top: 50%;
    transform: translateY(-50%);
    color: #555;
    pointer-events: none;
}

.kiosk-name-input {
    width: 100%;
    padding: 1.2rem 3.5rem 1.2rem 4rem;
    font-size: 1.8rem;
    border-radius: 18px;
    border: 2px solid rgba(201, 169, 110, 0.35);
    background: #1e1e30;
    color: #e8e8ee;
    outline: none;
    transition: border-color 0.2s, box-shadow 0.2s;
}

.kiosk-name-input::placeholder {
    color: #444;
}

.kiosk-name-input:focus {
    border-color: #c9a96e;
    box-shadow: 0 0 0 4px rgba(201, 169, 110, 0.12);
}

.kiosk-clear-btn {
    position: absolute;
    right: 1.2rem;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #666;
    font-size: 1.2rem;
    cursor: pointer;
    padding: 0.4rem;
    line-height: 1;
}

.kiosk-clear-btn:hover {
    color: #ccc;
}

/* --- Search results grid ---------------------------------------- */
.kiosk-results {
    width: 100%;
    max-width: 760px;
    margin-top: 1.5rem;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: 1rem;
    overflow-y: auto;
    max-height: calc(100vh - 320px);
    padding-bottom: 1rem;
}

.kiosk-member-card {
    background: #1e1e30;
    border: 2px solid transparent;
    border-radius: 16px;
    padding: 1.2rem 0.8rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6rem;
    cursor: pointer;
    transition: border-color 0.2s, background 0.2s, transform 0.15s;
    text-align: center;
    user-select: none;
}

.kiosk-member-card:hover {
    border-color: #c9a96e;
    background: #252540;
    transform: translateY(-2px);
}

.kiosk-member-card:active {
    transform: scale(0.97);
}

.kiosk-member-avatar {
    width: 72px;
    height: 72px;
    border-radius: 50%;
    object-fit: cover;
    background: #333;
    border: 2px solid rgba(255, 255, 255, 0.1);
}

.kiosk-member-name {
    font-size: 0.95rem;
    font-weight: 600;
    line-height: 1.3;
    color: #e8e8ee;
}

.kiosk-member-belt {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    padding: 0.25rem 0.6rem;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.1);
}

.kiosk-no-results {
    width: 100%;
    max-width: 760px;
    margin-top: 1.5rem;
    text-align: center;
    color: #556;
    font-size: 1rem;
}

/* --- Belt colour classes ---------------------------------------- */
.belt-white {
    background: #e8e8ee;
    color: #111;
}

.belt-yellow {
    background: #f6c90e;
    color: #111;
}

.belt-orange {
    background: #e87c2a;
    color: #fff;
}

.belt-green {
    background: #3a9e4f;
    color: #fff;
}

.belt-blue {
    background: #2563eb;
    color: #fff;
}

.belt-purple {
    background: #7c3aed;
    color: #fff;
}

.belt-brown {
    background: #7c4a1e;
    color: #fff;
}

.belt-red {
    background: #dc2626;
    color: #fff;
}

.belt-black {
    background: #111;
    color: #c9a96e;
    border: 1px solid #555;
}

/* --- Idle prompt -------------------------------------------------- */
.kiosk-idle {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 4rem;
    opacity: 0.25;
    pointer-events: none;
}

.kiosk-idle-belt {
    font-size: 5rem;
}

.kiosk-idle-text {
    font-size: 1.1rem;
    color: #888;
}

/* --- Confirmation overlay ---------------------------------------- */
.kiosk-confirm {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.8);
    z-index: 100;
}

.kiosk-confirm-card {
    background: #1e1e30;
    border-radius: 24px;
    padding: 3rem 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    min-width: 280px;
    max-width: 360px;
    text-align: center;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6);
    border: 2px solid rgba(255, 255, 255, 0.08);
}

.kiosk-confirm-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid rgba(255, 255, 255, 0.2);
    background: #333;
}

.kiosk-confirm-name {
    font-size: 1.6rem;
    font-weight: 700;
    color: #e8e8ee;
}

.kiosk-confirm-belt {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 0.3rem 0.9rem;
    border-radius: 20px;
}

.kiosk-confirm-msg {
    font-size: 1.2rem;
    font-weight: 600;
    color: #c9a96e;
    margin-top: 0.5rem;
}

.kiosk-confirm-msg.already-in {
    color: #888;
}

.kiosk-timer-bar {
    height: 4px;
    background: #c9a96e;
    border-radius: 4px;
    width: 100%;
    transform-origin: left center;
    animation: kiosk-timer 5s linear forwards;
}

@keyframes kiosk-timer {
    from {
        transform: scaleX(1);
    }

    to {
        transform: scaleX(0);
    }
}

/* --- Staff PIN screen -------------------------------------------- */
.kiosk-pin-screen {
    align-items: center;
    justify-content: center;
    background: #0f1117;
}

.kiosk-pin-card {
    background: #1a1a2e;
    border-radius: 20px;
    padding: 2.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    min-width: 320px;
    box-shadow: 0 16px 50px rgba(0, 0, 0, 0.5);
}

.kiosk-pin-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #c9a96e;
}

.kiosk-pin-error {
    color: #f87171;
    font-size: 0.9rem;
    background: rgba(248, 113, 113, 0.1);
    border: 1px solid rgba(248, 113, 113, 0.3);
    padding: 0.4rem 1rem;
    border-radius: 8px;
}

.kiosk-pin-dots {
    display: flex;
    gap: 1rem;
}

.pin-dot {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 2px solid #444;
    background: transparent;
    transition: background 0.15s, border-color 0.15s;
}

.pin-dot.filled {
    background: #c9a96e;
    border-color: #c9a96e;
}

/* --- Shared numpad (staff exit + member PIN) --------------------- */
.kiosk-numpad {
    display: grid;
    grid-template-columns: repeat(3, 72px);
    gap: 0.75rem;
}

.kiosk-num-btn,
.kiosk-del-btn {
    width: 72px;
    height: 72px;
    border-radius: 50%;
    border: none;
    background: #252540;
    color: #e8e8ee;
    font-size: 1.3rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.15s;
}

.kiosk-num-btn:hover {
    background: #32325a;
}

.kiosk-del-btn {
    background: #2a1832;
    color: #f87171;
}

.kiosk-del-btn:hover {
    background: #3d1f40;
}

.kiosk-num-empty {
    width: 72px;
    height: 72px;
}

.kiosk-pin-actions {
    display: flex;
    gap: 1rem;
    width: 100%;
    justify-content: center;
    margin-top: 0.5rem;
}

.kiosk-pin-cancel {
    padding: 0.65rem 1.5rem;
    border-radius: 10px;
    text-decoration: none;
    color: #888;
    background: rgba(255, 255, 255, 0.05);
    transition: background 0.2s;
}

.kiosk-pin-cancel:hover {
    background: rgba(255, 255, 255, 0.1);
}

.kiosk-pin-submit {
    padding: 0.65rem 1.5rem;
    border-radius: 10px;
    border: none;
    background: #c9a96e;
    color: #111;
    font-weight: 700;
    cursor: pointer;
    transition: background 0.2s, opacity 0.2s;
}

.kiosk-pin-submit:disabled {
    opacity: 0.35;
    cursor: not-allowed;
}

.kiosk-pin-submit:not(:disabled):hover {
    background: #dbbf7e;
}

/* --- Scrollbar tweaks (Webkit) ----------------------------------- */
.kiosk-results::-webkit-scrollbar {
    width: 6px;
}

.kiosk-results::-webkit-scrollbar-track {
    background: transparent;
}

.kiosk-results::-webkit-scrollbar-thumb {
    background: #333;
    border-radius: 3px;
}


