<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Dojo Instructor
         Base group for all teaching staff.
         Has access to Dojo Manager + Calendar + Employees.
         Does NOT see Payroll, Resignation, Expenses, Apps, etc.
    ============================================================ -->
    <record id="group_dojo_instructor" model="res.groups">
        <field name="name">Dojo Instructor</field>
    </record>

    <!-- ============================================================
         Dojo Admin / Manager
         Full dojo backend access: inherits Instructor rights
         plus Payroll, Resignation, Expenses, Apps menus.
    ============================================================ -->
    <record id="group_dojo_admin" model="res.groups">
        <field name="name">Dojo Admin</field>
        <field name="implied_ids" eval="[(4, ref('disaster_member_belts.group_dojo_instructor'))]"/>
    </record>

</odoo>
