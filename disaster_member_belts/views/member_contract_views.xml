<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Member Contract — List
    ============================================================ -->
    <record id="view_member_contract_list" model="ir.ui.view">
        <field name="name">disaster.member.contract.list</field>
        <field name="model">disaster.member.contract</field>
        <field name="arch" type="xml">
            <list string="Member Contracts"
                  decoration-danger="state == 'expired' or state == 'cancelled'"
                  decoration-success="state == 'active'"
                  decoration-warning="state == 'trial'">
                <field name="partner_id"/>
                <field name="plan_id"/>
                <field name="billing_cycle"/>
                <field name="price"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="next_billing_date"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'active'"
                       decoration-warning="state == 'trial'"
                       decoration-danger="state in ('expired','cancelled')"
                       decoration-muted="state == 'draft'"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Member Contract — Form
    ============================================================ -->
    <record id="view_member_contract_form" model="ir.ui.view">
        <field name="name">disaster.member.contract.form</field>
        <field name="model">disaster.member.contract</field>
        <field name="arch" type="xml">
            <form string="Member Contract">
                <header>
                    <button name="action_start_trial" string="Start Trial"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_activate" string="Activate"
                            type="object" class="btn-primary oe_highlight"
                            invisible="state not in ('draft','trial')"/>
                    <button name="action_cancel" string="Cancel Contract"
                            type="object"
                            invisible="state in ('cancelled','expired')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,trial,active,expired"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="display_name"/>
                        <h1><field name="display_name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Member">
                            <field name="partner_id"/>
                            <field name="plan_id"/>
                            <field name="billing_cycle" readonly="1"/>
                            <field name="belt_program" readonly="1"/>
                        </group>
                        <group string="Dates">
                            <field name="date_start"/>
                            <field name="trial_end_date"
                                   invisible="state != 'trial'"/>
                            <field name="date_end"/>
                            <field name="next_billing_date"
                                   invisible="state not in ('trial','active')"/>
                        </group>
                    </group>
                    <group string="Financials">
                        <group>
                            <field name="price"/>
                            <field name="setup_fee"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Contract notes..."/>
                    <field name="cancellation_reason"
                           placeholder="Reason for cancellation..."
                           invisible="state != 'cancelled'"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Member Contract — Search
    ============================================================ -->
    <record id="view_member_contract_search" model="ir.ui.view">
        <field name="name">disaster.member.contract.search</field>
        <field name="model">disaster.member.contract</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="plan_id"/>
                <filter string="Active" name="active"
                        domain="[('state','=','active')]"/>
                <filter string="Trial" name="trial"
                        domain="[('state','=','trial')]"/>
                <filter string="Expired" name="expired"
                        domain="[('state','=','expired')]"/>
                <filter string="Cancelled" name="cancelled"
                        domain="[('state','=','cancelled')]"/>
                <group>
                    <filter string="Plan" name="group_plan"
                            context="{'group_by': 'plan_id'}"/>
                    <filter string="Status" name="group_state"
                            context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================
         Member Contract — Action
    ============================================================ -->
    <record id="action_member_contract" model="ir.actions.act_window">
        <field name="name">Member Contracts</field>
        <field name="res_model">disaster.member.contract</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_member_contract_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>

</odoo>
