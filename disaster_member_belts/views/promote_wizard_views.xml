<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================================
         Promote Wizard – Form view
    ======================================================== -->
    <record id="view_disaster_promote_wizard_form" model="ir.ui.view">
        <field name="name">disaster.promote.wizard.form</field>
        <field name="model">disaster.promote.wizard</field>
        <field name="arch" type="xml">
            <form string="Promote Belt Rank">
                <sheet>
                    <div class="o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="alert alert-info" role="alert">
                                <strong>Confirm Belt Rank Promotion</strong>
                                <p>
                                    You are about to promote
                                    <strong>
                                        <field name="partner_id" readonly="1" nolabel="1"/>
                                    </strong>
                                    from
                                    <strong>
                                        <field name="current_rank_label" readonly="1" nolabel="1"/>
                                    </strong>
                                    to
                                    <strong>
                                        <field name="new_rank_label" readonly="1" nolabel="1"/>
                                    </strong>.
                                </p>
                            </div>
                        </div>
                    </div>
                    <group>
                        <group string="Promotion Details">
                            <field name="partner_id" readonly="1"/>
                            <field name="current_rank" readonly="1"/>
                            <field name="new_rank" readonly="1"/>
                        </group>
                        <group string="Options">
                            <field name="reset_attendance"/>
                        </group>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Optional remarks …"/>
                    </group>
                </sheet>
                <footer>
                    <button
                        name="action_confirm_promotion"
                        type="object"
                        string="Confirm Promotion"
                        class="btn-primary"
                    />
                    <button
                        string="Cancel"
                        class="btn-secondary"
                        special="cancel"
                    />
                </footer>
            </form>
        </field>
    </record>

</odoo>
