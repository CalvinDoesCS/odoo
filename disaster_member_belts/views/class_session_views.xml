<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Class Session — List View
    ============================================================ -->
    <record id="view_class_session_list" model="ir.ui.view">
        <field name="name">disaster.class.session.list</field>
        <field name="model">disaster.class.session</field>
        <field name="arch" type="xml">
            <list string="Class Sessions" decoration-muted="state == 'cancelled'"
                  decoration-success="state == 'done'" decoration-info="state == 'in_progress'">
                <field name="name"/>
                <field name="class_type"/>
                <field name="instructor_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="location"/>
                <field name="attendance_count" string="Checked In"/>
                <field name="capacity"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'in_progress'"
                       decoration-warning="state == 'scheduled'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Class Session — Form View
    ============================================================ -->
    <record id="view_class_session_form" model="ir.ui.view">
        <field name="name">disaster.class.session.form</field>
        <field name="model">disaster.class.session</field>
        <field name="arch" type="xml">
            <form string="Class Session">
                <header>
                    <button name="action_start" string="Start Class"
                            type="object" class="btn-primary"
                            invisible="state != 'scheduled'"/>
                    <button name="action_check_in_member" string="Check In Member"
                            type="object" class="btn-primary oe_highlight"
                            invisible="state == 'done' or state == 'cancelled'"/>
                    <button name="action_done" string="Mark Done"
                            type="object"
                            invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel"
                            type="object"
                            invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="scheduled,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attendances" type="object"
                                class="oe_stat_button" icon="fa-users">
                            <field name="attendance_count" widget="statinfo"
                                   string="Checked In"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="e.g. Monday 6pm Beginner Karate"/></h1>
                    </div>
                    <group>
                        <group string="Details">
                            <field name="class_type"/>
                            <field name="instructor_id"/>
                            <field name="location"/>
                            <field name="capacity"/>
                            <field name="schedule_id" readonly="1"
                                   invisible="not schedule_id"/>
                        </group>
                        <group string="Schedule">
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration" widget="float_time" readonly="1"/>
                        </group>
                    </group>
                    <field name="notes" placeholder="Class notes..."/>
                    <notebook>
                        <page string="Attendance" name="attendance">
                            <field name="attendance_ids" mode="list">
                                <list>
                                    <field name="partner_id"/>
                                    <field name="belt_rank_at_checkin"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Class Session — Search View
    ============================================================ -->
    <record id="view_class_session_search" model="ir.ui.view">
        <field name="name">disaster.class.session.search</field>
        <field name="model">disaster.class.session</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="instructor_id"/>
                <field name="class_type"/>
                <filter string="Scheduled" name="scheduled"
                        domain="[('state','=','scheduled')]"/>
                <filter string="In Progress" name="in_progress"
                        domain="[('state','=','in_progress')]"/>
                <filter string="Done" name="done"
                        domain="[('state','=','done')]"/>
                <separator/>
                <filter string="Today" name="today" date="date_start"/>
                <group>
                    <filter string="Class Type" name="group_type"
                            context="{'group_by': 'class_type'}"/>
                    <filter string="Instructor" name="group_instructor"
                            context="{'group_by': 'instructor_id'}"/>
                    <filter string="Date" name="group_date"
                            context="{'group_by': 'date_start:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================
         Class Session — Actions
    ============================================================ -->
    <record id="action_class_session" model="ir.actions.act_window">
        <field name="name">Class Sessions</field>
        <field name="res_model">disaster.class.session</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_class_session_search"/>
        <field name="context">{'search_default_scheduled': 1}</field>
    </record>

</odoo>
