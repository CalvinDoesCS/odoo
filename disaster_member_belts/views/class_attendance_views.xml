<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Class Attendance — List View
    ============================================================ -->
    <record id="view_class_attendance_list" model="ir.ui.view">
        <field name="name">disaster.class.attendance.list</field>
        <field name="model">disaster.class.attendance</field>
        <field name="arch" type="xml">
            <list string="Attendance Records">
                <field name="session_id"/>
                <field name="session_date"/>
                <field name="class_type"/>
                <field name="partner_id"/>
                <field name="belt_rank_at_checkin" widget="badge"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Class Attendance — Form View
    ============================================================ -->
    <record id="view_class_attendance_form" model="ir.ui.view">
        <field name="name">disaster.class.attendance.form</field>
        <field name="model">disaster.class.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance Record">
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="session_id"/>
                            <field name="belt_rank_at_checkin" readonly="1"/>
                        </group>
                        <group>
                            <field name="check_in"/>
                            <field name="check_out"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Class Attendance — Search View
    ============================================================ -->
    <record id="view_class_attendance_search" model="ir.ui.view">
        <field name="name">disaster.class.attendance.search</field>
        <field name="model">disaster.class.attendance</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="session_id"/>
                <field name="belt_rank_at_checkin"/>
                <group>
                    <filter string="Member" name="group_member"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Session" name="group_session"
                            context="{'group_by': 'session_id'}"/>
                    <filter string="Belt Rank" name="group_belt"
                            context="{'group_by': 'belt_rank_at_checkin'}"/>
                    <filter string="Date" name="group_date"
                            context="{'group_by': 'session_date:week'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================================
         Class Attendance — Action
    ============================================================ -->
    <record id="action_class_attendance" model="ir.actions.act_window">
        <field name="name">Attendance Records</field>
        <field name="res_model">disaster.class.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_class_attendance_search"/>
    </record>

</odoo>
