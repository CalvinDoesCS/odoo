<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Members â€” dedicated list action (is_member = True filter)
    ============================================================ -->
    <record id="action_member_list" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('is_member', '=', True)]</field>
        <field name="context">{'default_is_member': True}</field>
    </record>

    <record id="action_trial_list" model="ir.actions.act_window">
        <field name="name">Trials</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('member_stage', '=', 'trial')]</field>
        <field name="context">{'default_is_member': True, 'default_member_stage': 'trial'}</field>
    </record>

    <record id="action_lead_list" model="ir.actions.act_window">
        <field name="name">Leads / Prospects</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('member_stage', '=', 'lead')]</field>
        <field name="context">{'default_member_stage': 'lead'}</field>
    </record>

    <record id="action_instructor_list" model="ir.actions.act_window">
        <field name="name">Instructors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_instructor', '=', True)]</field>
        <field name="context">{'default_is_instructor': True}</field>
    </record>

    <!-- ============================================================
         Kiosk quick-launch from the backend
    ============================================================ -->
    <record id="action_open_kiosk" model="ir.actions.act_url">
        <field name="name">Open Kiosk</field>
        <field name="url">/dojo/kiosk</field>
        <field name="target">new</field>
    </record>

    <!-- ============================================================
         Main Application Menu
    ============================================================ -->
    <menuitem id="menu_disaster_root"
              name="Dojo Manager"
              sequence="50"/>

    <!-- Kiosk shortcut â€” bottom of the menu, opens in a new tab -->
    <menuitem id="menu_open_kiosk"
              name="ğŸ–¥ Open Kiosk"
              parent="menu_disaster_root"
              action="disaster_member_belts.action_open_kiosk"
              sequence="999"/>

    <!-- Members -->
    <menuitem id="menu_members"
              name="Members"
              parent="menu_disaster_root"
              sequence="10"/>

    <menuitem id="menu_member_list"
              name="All Members"
              parent="menu_members"
              action="disaster_member_belts.action_member_list"
              sequence="10"/>

    <menuitem id="menu_trial_list"
              name="Trials"
              parent="menu_members"
              action="disaster_member_belts.action_trial_list"
              sequence="20"/>

    <menuitem id="menu_lead_list"
              name="Leads"
              parent="menu_members"
              action="disaster_member_belts.action_lead_list"
              sequence="30"/>

    <menuitem id="menu_instructor_list"
              name="Instructors"
              parent="menu_members"
              action="disaster_member_belts.action_instructor_list"
              sequence="40"/>

    <!-- Classes -->
    <menuitem id="menu_classes"
              name="Classes"
              parent="menu_disaster_root"
              sequence="20"/>

    <menuitem id="menu_class_session"
              name="Sessions"
              parent="menu_classes"
              action="disaster_member_belts.action_class_session"
              sequence="10"/>

    <menuitem id="menu_class_schedule"
              name="Schedules"
              parent="menu_classes"
              action="disaster_member_belts.action_class_schedule"
              sequence="20"/>

    <menuitem id="menu_class_attendance"
              name="Attendance"
              parent="menu_classes"
              action="disaster_member_belts.action_class_attendance"
              sequence="30"/>

    <menuitem id="menu_courses"
              name="Courses"
              parent="menu_disaster_root"
              sequence="25"/>

    <menuitem id="menu_course_list"
              name="All Courses"
              parent="menu_courses"
              action="disaster_member_belts.action_course"
              sequence="10"/>

    <!-- Contracts -->
    <menuitem id="menu_billing"
              name="Billing"
              parent="menu_disaster_root"
              sequence="30"/>

    <menuitem id="menu_member_contract"
              name="Contracts"
              parent="menu_billing"
              action="disaster_member_belts.action_member_contract"
              sequence="10"/>

    <menuitem id="menu_membership_plan"
              name="Membership Plans"
              parent="menu_billing"
              action="disaster_member_belts.action_membership_plan"
              sequence="20"/>

    <menuitem id="menu_billing_invoice"
              name="Billing Invoices"
              parent="menu_billing"
              action="disaster_member_belts.action_billing_invoice"
              sequence="30"/>

    <!-- Pipeline / Leads -->
    <menuitem id="menu_pipeline"
              name="Pipeline"
              parent="menu_disaster_root"
              sequence="15"/>

    <menuitem id="menu_lead_pipeline"
              name="Leads &amp; Trials"
              parent="menu_pipeline"
              action="disaster_member_belts.action_disaster_lead"
              sequence="10"/>

    <!-- Belt Tests -->
    <menuitem id="menu_belt_tests"
              name="Belt Tests"
              parent="menu_disaster_root"
              sequence="27"/>

    <menuitem id="menu_belt_test_list"
              name="All Belt Tests"
              parent="menu_belt_tests"
              action="disaster_member_belts.action_belt_test"
              sequence="10"/>

    <!-- Front-Desk Sales -->
    <menuitem id="menu_sales"
              name="Sales"
              parent="menu_disaster_root"
              sequence="35"/>

    <menuitem id="menu_dojo_sale_list"
              name="Front-Desk Sales"
              parent="menu_sales"
              action="disaster_member_belts.action_dojo_sale"
              sequence="10"/>

    <!-- Broadcast -->
    <menuitem id="menu_broadcast"
              name="Send Broadcast"
              parent="menu_disaster_root"
              sequence="90"
              action="disaster_member_belts.action_broadcast_wizard"/>

    <!-- Configuration -->
    <menuitem id="menu_config"
              name="Configuration"
              parent="menu_disaster_root"
              sequence="100"/>

    <menuitem id="menu_belt_config"
              name="Belt Rank Thresholds"
              parent="menu_config"
              action="disaster_member_belts.action_disaster_belt_rank_config"
              sequence="10"/>

</odoo>
