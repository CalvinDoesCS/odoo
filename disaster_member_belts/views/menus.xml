<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Members â€” dedicated list action (is_member = True filter)
    ============================================================ -->
    <record id="action_member_list" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('is_member', '=', True)]</field>
        <field name="context">{'default_is_member': True}</field>
    </record>

    <record id="action_trial_list" model="ir.actions.act_window">
        <field name="name">Trials</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('member_stage', '=', 'trial')]</field>
        <field name="context">{'default_is_member': True, 'default_member_stage': 'trial'}</field>
    </record>

    <record id="action_lead_list" model="ir.actions.act_window">
        <field name="name">Leads / Prospects</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('member_stage', '=', 'lead')]</field>
        <field name="context">{'default_member_stage': 'lead'}</field>
    </record>

    <record id="action_instructor_list" model="ir.actions.act_window">
        <field name="name">Instructors</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_instructor', '=', True)]</field>
        <field name="context">{'default_is_instructor': True}</field>
    </record>

    <!-- All menus live in sub-modules. disaster_member_belts is a library only. -->

</odoo>
