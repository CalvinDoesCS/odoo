<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Paper format: A4 Portrait â€“ same as hr.paperformat_hr_employee_badge.
         page_width/page_height are explicitly set to 0 to clear any previously
         stored custom dimensions (constraint forbids both format + dimensions). -->
    <record id="paperformat_member_badge" model="report.paperformat">
        <field name="name">Member Badge</field>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_height">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line">False</field>
        <field name="header_spacing">0</field>
        <field name="disable_shrinking" eval="True"/>
        <field name="dpi">96</field>
    </record>

    <!-- Report action -->
    <record id="action_report_member_badge" model="ir.actions.report">
        <field name="name">Member Badge</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">disaster_member_belts.member_badge_template</field>
        <field name="report_file">disaster_member_belts.member_badge_template</field>
        <field name="print_report_name">'Badge - %s' % (object.name).replace('/', '')</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="disaster_member_belts.paperformat_member_badge"/>
    </record>

    <!-- QWeb template â€“ identical layout to hr.print_employee_badge.
         Left col:  company logo + member photo (max-height 50pt)
         Right col: member name (15pt bold) / belt rank label / barcode widget -->
    <template id="member_badge_template">
        <t t-call="web.basic_layout">
            <div class="page">
                <div class="oe_structure"></div>
                <t t-foreach="docs" t-as="partner">
                    <div style="display: inline-block; page-break-inside: avoid; width: 243pt; height: 153pt; border: 1pt solid black; border-radius: 8pt; margin: 5pt; padding: 2pt;">
                        <div class="oe_structure"></div>
                        <table style="width: 100%; height: 100%; border-spacing: 4pt; border-collapse: separate;" class="table-borderless">
                            <tr>
                                <!-- Left column: logo + photo -->
                                <td style="width: 33%;">
                                    <table style="width: 100%; height: 100%; text-align: center;" class="table-borderless">
                                        <tr style="height: 30%; padding-top: 4pt; padding-bottom: 2pt;">
                                            <td>
                                                <img src="/web/binary/company_logo"
                                                     style="max-height: 40pt; max-width: 100%;"
                                                     alt="Logo"/>
                                            </td>
                                        </tr>
                                        <tr style="height: 70%;">
                                            <td style="height: 100%; width: 100%; padding-top: 2pt; padding-bottom: 4pt;">
                                                <img t-att-src="image_data_uri(partner.avatar_128)"
                                                     style="max-height: 50pt; max-width: 100%;"
                                                     alt="Photo"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <!-- Right column: name / belt rank / barcode -->
                                <td style="width: 67%; height: 100%; vertical-align: top;">
                                    <table style="width: 100%; height: 100%; text-align: center;" class="table-borderless">
                                        <tr>
                                            <th>
                                                <span style="font-size: 15pt;" t-out="partner.name"/>
                                            </th>
                                        </tr>
                                        <tr>
                                            <td>
                                                <t t-if="partner.belt_rank">
                                                    <span style="font-size: 10pt;">
                                                        <span t-field="partner.belt_rank"/> Belt
                                                    </span>
                                                </t>
                                                <t t-else="">
                                                    <span style="font-size: 10pt; color: #888;">Member</span>
                                                </t>
                                            </td>
                                        </tr>
                                        <tr style="height: 100%;">
                                            <td style="vertical-align: bottom; padding-bottom: 4pt;">
                                                <div t-if="partner.member_barcode"
                                                     t-field="partner.member_barcode"
                                                     t-options="{'widget': 'barcode', 'width': 600, 'height': 120, 'img_style': 'max-width:100%;', 'img_align': 'center'}"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <div class="oe_structure"></div>
                    </div>
                </t>
                <div class="oe_structure"></div>
            </div>
        </t>
    </template>

</odoo>
