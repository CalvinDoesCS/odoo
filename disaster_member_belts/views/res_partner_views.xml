<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========================================================
         res.partner â€“ Inherit Form View
    ======================================================== -->
    <record id="view_partner_belt_rank_form" model="ir.ui.view">
        <field name="name">res.partner.belt.rank.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Belt statusbar + Promote button (only for members) -->
            <xpath expr="//sheet" position="before">
                <header invisible="not is_member">
                    <field
                        name="belt_rank"
                        widget="statusbar"
                        statusbar_visible="white,yellow,orange,green,blue,purple,brown,red,black"
                        class="o_belt_rank_statusbar"
                        options="{'clickable': false}"
                    />
                    <button
                        name="action_open_promote_wizard"
                        type="object"
                        string="Promote"
                        class="btn-primary oe_highlight"
                        invisible="belt_rank == 'black' or not is_member"
                        title="Promote this member to the next belt rank"
                    />
                </header>
            </xpath>

            <!-- Smart buttons -->
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_contracts"
                    icon="fa-file-text-o"
                    invisible="not is_member"
                >
                    <field name="contract_count" widget="statinfo" string="Contracts"/>
                </button>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_referrals"
                    icon="fa-users"
                    invisible="not is_member"
                >
                    <field name="referral_count" widget="statinfo" string="Referrals"/>
                </button>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_leads"
                    icon="fa-bullhorn"
                    invisible="not is_member"
                >
                    <field name="lead_count" widget="statinfo" string="Leads"/>
                </button>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_billing_invoices"
                    icon="fa-file-text"
                    invisible="not is_member"
                >
                    <field name="billing_invoice_count" widget="statinfo" string="Invoices"/>
                </button>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_dojo_sales"
                    icon="fa-shopping-cart"
                    invisible="not is_member"
                >
                    <field name="dojo_sale_count" widget="statinfo" string="Sales"/>
                </button>
                <button
                    class="oe_stat_button"
                    type="object"
                    name="action_view_belt_tests"
                    icon="fa-trophy"
                    invisible="not is_member"
                >
                    <field name="belt_test_count" widget="statinfo" string="Belt Tests"/>
                </button>
            </xpath>

            <!-- "Ready for Test" banner -->
            <xpath expr="//div[hasclass('mb8')]" position="before">
                <div
                    class="alert alert-success o_belt_ready_banner"
                    invisible="not ready_for_test"
                    role="alert"
                >
                    <strong>ğŸ¥‹ Ready for Test!</strong>
                    This member has met the attendance requirement and is ready
                    to be promoted to <field name="next_belt_rank" readonly="1" nolabel="1"/>.
                </div>
            </xpath>

            <!-- Member Details + Belt Rank groups before the notebook -->
            <xpath expr="//notebook" position="before">

                <group string="Member Details" invisible="not is_member" class="o_belt_rank_group">
                    <group>
                        <field name="is_member"/>
                        <field name="is_instructor"/>
                        <field name="member_stage"/>
                        <field name="join_date"/>
                        <field name="date_of_birth"/>
                        <field name="age" readonly="1"/>
                    </group>
                    <group>
                        <field name="plan_id" readonly="1"/>
                        <field name="active_contract_id" readonly="1"/>
                        <field name="emergency_contact"/>
                        <field name="emergency_phone"/>
                        <field name="guardian_id"
                               placeholder="Parent / guardian for absence alerts"/>\n                        <button string="ğŸ“ Call Guardian"
                                type="object"
                                name="action_call_guardian"
                                class="btn-secondary btn-sm"
                                invisible="not guardian_id"
                                title="Open Twilio call wizard for this student's guardian"/>
                        <field name="notify_absence_email"
                               invisible="not guardian_id"/>
                        <field name="notify_absence_sms"
                               invisible="not guardian_id"/>
                        <field name="referred_by_id"/>
                        <field name="referral_count" readonly="1"/>
                    </group>
                </group>

                <group string="Belt Rank" invisible="not is_member" class="o_belt_rank_group">
                    <group>
                        <field name="belt_rank"/>
                        <field name="attendance_count"/>
                    </group>
                    <group>
                        <field name="ready_for_test" readonly="1"/>
                        <field name="next_belt_rank" readonly="1"/>
                    </group>
                </group>

                <group string="Check-In / Badge" invisible="not is_member" class="o_belt_rank_group">
                    <group>
                        <field name="member_barcode"
                               placeholder="e.g. 0411234567"
                               help="Member's unique barcode / badge ID for check-in."/>
                        <!-- Generate button â€“ visible only when barcode is empty -->
                        <button string="Generate Barcode"
                                type="object"
                                name="action_generate_member_barcode"
                                class="btn-secondary"
                                invisible="member_barcode != False"
                                title="Auto-generate a unique barcode for this member"/>
                        <!-- Print Badge button â€“ visible only when barcode exists -->
                        <button string="ğŸ–¨ Print Badge"
                                type="object"
                                name="action_print_member_badge"
                                class="btn-primary"
                                invisible="not member_barcode"
                                title="Print the member's ID badge with barcode"/>
                        <!-- Visual barcode render -->
                        <field name="member_barcode"
                               widget="barcode"
                               nolabel="1"
                               readonly="1"
                               invisible="not member_barcode"/>
                    </group>
                    <!-- Attendance clock-in employee -->
                    <group string="Attendance Clock-In" colspan="2">
                        <field name="member_employee_id" readonly="1" nolabel="0"
                               options="{'no_open': False}"
                               help="Shadow employee used for Odoo clock-in/clock-out."/>
                        <button string="â• Create Attendance Employee"
                                type="object"
                                name="action_sync_member_employee"
                                class="btn-primary"
                                invisible="member_employee_id != False"
                                title="Create an HR employee so this member can clock in/out via the Attendance kiosk."/>
                        <button string="ğŸ”„ Re-Sync Employee"
                                type="object"
                                name="action_sync_member_employee"
                                class="btn-secondary"
                                invisible="not member_employee_id"
                                title="Push updated name / photo / contact to the linked HR employee."/>
                    </group>
                </group>

                <!-- For non-members: simple flag to enrol them -->
                <group invisible="is_member">
                    <field name="is_member"/>
                    <field name="is_instructor"/>
                </group>

            </xpath>

        </field>
    </record>

    <!-- ========================================================
         res.partner â€“ Inherit Kanban View
    ======================================================== -->
    <record id="view_partner_belt_rank_kanban" model="ir.ui.view">
        <field name="name">res.partner.belt.rank.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">

            <xpath expr="//kanban" position="inside">
                <field name="belt_rank"/>
                <field name="ready_for_test"/>
                <field name="is_member"/>
                <field name="member_stage"/>
            </xpath>

            <xpath expr="//main/div[hasclass('mb-1')]" position="after">
                <div
                    t-if="record.is_member.raw_value and record.belt_rank.raw_value"
                    t-attf-class="o_belt_badge o_belt_#{record.belt_rank.raw_value}"
                    title="Belt Rank"
                >
                    <t t-esc="record.belt_rank.value"/>
                </div>
                <div
                    t-if="record.ready_for_test.raw_value"
                    class="o_belt_ready_badge"
                    title="Ready for Test"
                >
                    â˜… Ready
                </div>
            </xpath>

        </field>
    </record>

</odoo>
