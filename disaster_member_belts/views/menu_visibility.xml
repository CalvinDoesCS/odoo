    <record id="base.menu_tests" model="ir.ui.menu">
        <field name="group_ids" eval="[(6, 0, [
            ref('base.group_system'),
        ])]"/>
    </record>

    <record id="utm.menu_link_tracker_root" model="ir.ui.menu">
        <field name="group_ids" eval="[(6, 0, [
            ref('disaster_member_belts.group_dojo_admin'),
