<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Restrict backend menus so instructors only see what they need.

        Instructors CAN see:
          Dojo Manager, Employees, Calendar, Discuss, To-do,
          Dashboard (HRMS), Time Off

        Instructors CANNOT see (restricted to Dojo Admin or System Admin):
          Payroll, Resignation, Dashboards, Expenses,
          Apps, Settings, Tests, Link Tracker
    -->

    <!-- Optional module menus removed from this base module to avoid install-time
         XML-ID errors when those modules are not installed. Keep only menus from
         dependencies guaranteed by this module. -->

    <record id="base.menu_management" model="ir.ui.menu">
        <field name="group_ids" eval="[(6, 0, [
            ref('disaster_member_belts.group_dojo_admin'),
            ref('base.group_system'),
        ])]"/>
    </record>

    <record id="base.menu_tests" model="ir.ui.menu">
        <field name="group_ids" eval="[(6, 0, [
            ref('base.group_system'),
        ])]"/>
    </record>

    <record id="utm.menu_link_tracker_root" model="ir.ui.menu">
        <field name="group_ids" eval="[(6, 0, [
            ref('disaster_member_belts.group_dojo_admin'),
            ref('base.group_system'),
        ])]"/>
    </record>

</odoo>
