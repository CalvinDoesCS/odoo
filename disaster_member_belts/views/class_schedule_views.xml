<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Class Schedule – List
    ============================================================ -->
    <record id="view_class_schedule_list" model="ir.ui.view">
        <field name="name">disaster.class.schedule.list</field>
        <field name="model">disaster.class.schedule</field>
        <field name="arch" type="xml">
            <list string="Class Schedules" decoration-muted="not active">
                <field name="name"/>
                <field name="day_of_week"/>
                <field name="time_start_display" string="Time"/>
                <field name="duration" string="Duration (h)"/>
                <field name="class_type"/>
                <field name="instructor_id"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="course_id"/>
                <field name="session_count" string="Sessions"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- ============================================================
         Class Schedule – Form
    ============================================================ -->
    <record id="view_class_schedule_form" model="ir.ui.view">
        <field name="name">disaster.class.schedule.form</field>
        <field name="model">disaster.class.schedule</field>
        <field name="arch" type="xml">
            <form string="Class Schedule">
                <header>
                    <button name="action_generate_sessions_manual"
                            string="Generate Next 7 Days"
                            type="object"
                            class="btn-primary"/>
                    <field name="active" widget="boolean_toggle" string="Active"/>
                </header>
                <sheet>
                    <!-- Smart buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sessions" type="object"
                                class="oe_stat_button" icon="fa-calendar">
                            <field name="session_count" widget="statinfo" string="Sessions"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1><field name="name" placeholder="e.g. Beginner Monday 6pm"/></h1>
                    </div>

                    <group>
                        <group string="Timetable">
                            <field name="day_of_week"/>
                            <field name="time_start" widget="float_time"/>
                            <field name="duration" widget="float_time"/>
                            <field name="class_type"/>
                            <field name="location"/>
                            <field name="capacity"/>
                        </group>
                        <group string="Assignment">
                            <field name="instructor_id"/>
                            <field name="course_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- ============================================================
         Class Schedule – Search
    ============================================================ -->
    <record id="view_class_schedule_search" model="ir.ui.view">
        <field name="name">disaster.class.schedule.search</field>
        <field name="model">disaster.class.schedule</field>
        <field name="arch" type="xml">
            <search string="Search Schedules">
                <field name="name"/>
                <field name="instructor_id"/>
                <field name="course_id"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="archived" domain="[('active','=',False)]"/>
                <separator/>
                <filter string="Monday"    name="mon" domain="[('day_of_week','=','0')]"/>
                <filter string="Tuesday"   name="tue" domain="[('day_of_week','=','1')]"/>
                <filter string="Wednesday" name="wed" domain="[('day_of_week','=','2')]"/>
                <filter string="Thursday"  name="thu" domain="[('day_of_week','=','3')]"/>
                <filter string="Friday"    name="fri" domain="[('day_of_week','=','4')]"/>
                <filter string="Saturday"  name="sat" domain="[('day_of_week','=','5')]"/>
                <filter string="Sunday"    name="sun" domain="[('day_of_week','=','6')]"/>
                <separator/>
                <filter string="Day"        name="grp_day"        context="{'group_by': 'day_of_week'}"/>
                <filter string="Instructor" name="grp_instructor" context="{'group_by': 'instructor_id'}"/>
                <filter string="Class Type" name="grp_type"       context="{'group_by': 'class_type'}"/>
                <filter string="Course"     name="grp_course"     context="{'group_by': 'course_id'}"/>
            </search>
        </field>
    </record>

    <!-- ============================================================
         Action
    ============================================================ -->
    <record id="action_class_schedule" model="ir.actions.act_window">
        <field name="name">Class Schedules</field>
        <field name="res_model">disaster.class.schedule</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': True}</field>
    </record>

</odoo>
