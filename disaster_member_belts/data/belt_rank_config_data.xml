<?xml version="1.0" encoding="utf-8"?>
<!--
    belt_rank_config_data.xml
    ─────────────────────────
    Seeds one configuration record per belt rank with sensible default
    attendance thresholds.  Administrators can adjust these values at any
    time through Configuration → Belt Rank Thresholds.
-->
<odoo noupdate="1">

    <record id="belt_config_white" model="disaster.belt.rank.config">
        <field name="sequence">1</field>
        <field name="rank">white</field>
        <field name="min_attendance">10</field>
    </record>

    <record id="belt_config_yellow" model="disaster.belt.rank.config">
        <field name="sequence">2</field>
        <field name="rank">yellow</field>
        <field name="min_attendance">20</field>
    </record>

    <record id="belt_config_orange" model="disaster.belt.rank.config">
        <field name="sequence">3</field>
        <field name="rank">orange</field>
        <field name="min_attendance">30</field>
    </record>

    <record id="belt_config_green" model="disaster.belt.rank.config">
        <field name="sequence">4</field>
        <field name="rank">green</field>
        <field name="min_attendance">40</field>
    </record>

    <record id="belt_config_blue" model="disaster.belt.rank.config">
        <field name="sequence">5</field>
        <field name="rank">blue</field>
        <field name="min_attendance">50</field>
    </record>

    <record id="belt_config_purple" model="disaster.belt.rank.config">
        <field name="sequence">6</field>
        <field name="rank">purple</field>
        <field name="min_attendance">60</field>
    </record>

    <record id="belt_config_brown" model="disaster.belt.rank.config">
        <field name="sequence">7</field>
        <field name="rank">brown</field>
        <field name="min_attendance">75</field>
    </record>

    <record id="belt_config_red" model="disaster.belt.rank.config">
        <field name="sequence">8</field>
        <field name="rank">red</field>
        <field name="min_attendance">100</field>
    </record>

    <record id="belt_config_black" model="disaster.belt.rank.config">
        <field name="sequence">9</field>
        <field name="rank">black</field>
        <field name="min_attendance">150</field>
    </record>

</odoo>
