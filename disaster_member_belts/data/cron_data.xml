<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron: check contract expiries daily -->
    <record id="ir_cron_check_contract_expiries" model="ir.cron">
        <field name="name">Dojo: Check Contract Expiries</field>
        <field name="model_id" ref="model_disaster_member_contract"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_expiries()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 06:00:00')"/>
    </record>

    <!-- Cron: auto-generate class sessions from recurring schedules -->
    <record id="ir_cron_generate_sessions" model="ir.cron">
        <field name="name">Dojo: Generate Scheduled Sessions</field>
        <field name="model_id" ref="model_disaster_class_schedule"/>
        <field name="state">code</field>
        <field name="code">model.cron_generate_sessions()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 05:00:00')"/>
    </record>

    <!-- Cron: alert instructor when a student is absent too long -->
    <record id="ir_cron_absent_student_alert" model="ir.cron">
        <field name="name">Dojo: Absent Student Alert</field>
        <field name="model_id" ref="model_disaster_course"/>
        <field name="state">code</field>
        <field name="code">model.cron_absent_student_alert()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 07:00:00')"/>
    </record>

    <!-- Cron: generate recurring billing invoices -->
    <record id="ir_cron_generate_recurring_billing" model="ir.cron">
        <field name="name">Dojo: Generate Recurring Billing Invoices</field>
        <field name="model_id" ref="model_disaster_billing_invoice"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_recurring()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 06:00:00')"/>
    </record>

    <!-- Cron: mark overdue billing invoices -->
    <record id="ir_cron_mark_overdue_billing" model="ir.cron">
        <field name="name">Dojo: Mark Overdue Billing Invoices</field>
        <field name="model_id" ref="model_disaster_billing_invoice"/>
        <field name="state">code</field>
        <field name="code">model._cron_mark_overdue()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 08:00:00')"/>
    </record>

</odoo>
