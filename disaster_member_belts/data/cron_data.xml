<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron: check contract expiries daily -->
    <record id="ir_cron_check_contract_expiries" model="ir.cron">
        <field name="name">Dojo: Check Contract Expiries</field>
        <field name="model_id" ref="model_disaster_member_contract"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_expiries()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 06:00:00')"/>
    </record>
</odoo>
