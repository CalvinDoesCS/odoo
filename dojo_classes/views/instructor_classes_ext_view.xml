<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================================================
         Extend Instructor list â€“ add Sessions Taught column
    ============================================================ -->
    <record id="view_instructor_list_sessions_ext" model="ir.ui.view">
        <field name="name">res.partner.instructor.list.sessions.ext</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="disaster_member_belts.view_instructor_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='assigned_member_count']" position="after">
                <field name="sessions_taught_count" string="Sessions Taught"/>
            </xpath>
        </field>
    </record>

    <!-- ============================================================
         Extend Instructor form â€“ add Sessions Taught smart button
    ============================================================ -->
    <record id="view_partner_instructor_sessions_ext" model="ir.ui.view">
        <field name="name">res.partner.instructor.form.sessions.ext</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="disaster_member_belts.view_partner_instructor_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_assigned_students']" position="before">
                <button name="action_view_sessions_taught" type="object"
                        class="oe_stat_button" icon="fa-calendar"
                        invisible="not is_instructor">
                    <field name="sessions_taught_count" widget="statinfo" string="Sessions Taught"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
