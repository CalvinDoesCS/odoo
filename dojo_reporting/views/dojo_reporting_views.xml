<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════════════════════════════════════════════════════════
         KPI Dashboard
    ═══════════════════════════════════════════════════════════════════ -->
    <record id="view_dojo_kpi_report_form" model="ir.ui.view">
        <field name="name">dojo.kpi.report.form</field>
        <field name="model">dojo.kpi.report</field>
        <field name="arch" type="xml">
            <form string="KPI Dashboard">
                <header>
                    <button name="action_refresh" type="object" string="Refresh KPIs"
                            class="btn-primary" />
                </header>
                <sheet>
                    <group string="Date Range">
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="company_id" groups="base.group_multi_company" />
                    </group>
                    <group string="Members">
                        <group>
                            <field name="total_active_members" />
                            <field name="total_trial_members" />
                            <field name="total_inactive_members" />
                        </group>
                        <group>
                            <field name="new_members_period" />
                            <field name="churned_members_period" />
                            <field name="promotions_period" />
                        </group>
                    </group>
                    <group string="Attendance (Period)">
                        <group>
                            <field name="total_checkins_period" />
                            <field name="avg_checkins_per_member" />
                        </group>
                        <group>
                            <field name="sessions_held_period" />
                        </group>
                    </group>
                    <group string="Contract Health">
                        <field name="contracts_on_hold" />
                        <field name="contracts_past_due" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_dojo_kpi_dashboard" model="ir.actions.act_window">
        <field name="name">KPI Dashboard</field>
        <field name="res_model">dojo.kpi.report</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════
         Cohort Retention
    ═══════════════════════════════════════════════════════════════════ -->
    <record id="view_dojo_cohort_report_list" model="ir.ui.view">
        <field name="name">dojo.cohort.report.list</field>
        <field name="model">dojo.cohort.report</field>
        <field name="arch" type="xml">
            <list string="Cohort Retention" create="false" edit="false" delete="false">
                <field name="cohort_month" />
                <field name="cohort_size" />
                <field name="active_30" />
                <field name="active_60" />
                <field name="active_90" />
                <field name="active_180" />
                <field name="retention_30" />
                <field name="retention_90" />
                <field name="retention_180" />
            </list>
        </field>
    </record>

    <record id="view_dojo_cohort_report_graph" model="ir.ui.view">
        <field name="name">dojo.cohort.report.graph</field>
        <field name="model">dojo.cohort.report</field>
        <field name="arch" type="xml">
            <graph string="Cohort Retention" type="bar">
                <field name="cohort_month" />
                <field name="retention_30" type="measure" string="30d %" />
                <field name="retention_90" type="measure" string="90d %" />
                <field name="retention_180" type="measure" string="180d %" />
            </graph>
        </field>
    </record>

    <record id="action_dojo_cohort_retention" model="ir.actions.act_window">
        <field name="name">Cohort Retention</field>
        <field name="res_model">dojo.cohort.report</field>
        <field name="view_mode">list,graph</field>
        <field name="context">{'create': False}</field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════
         Attendance Analytics
    ═══════════════════════════════════════════════════════════════════ -->
    <record id="view_dojo_attendance_report_pivot" model="ir.ui.view">
        <field name="name">dojo.attendance.report.pivot</field>
        <field name="model">dojo.attendance.report</field>
        <field name="arch" type="xml">
            <pivot string="Attendance Analytics" display_quantity="true">
                <field name="session_date" type="row" interval="week" />
                <field name="belt_rank" type="col" />
                <field name="session_id" type="measure" string="Sessions" />
            </pivot>
        </field>
    </record>

    <record id="view_dojo_attendance_report_graph" model="ir.ui.view">
        <field name="name">dojo.attendance.report.graph</field>
        <field name="model">dojo.attendance.report</field>
        <field name="arch" type="xml">
            <graph string="Attendance Over Time" type="bar">
                <field name="session_date" interval="week" />
                <field name="member_id" type="measure" string="Check-ins" />
            </graph>
        </field>
    </record>

    <record id="view_dojo_attendance_report_list" model="ir.ui.view">
        <field name="name">dojo.attendance.report.list</field>
        <field name="model">dojo.attendance.report</field>
        <field name="arch" type="xml">
            <list string="Attendance Details" create="false" edit="false" delete="false">
                <field name="session_date" />
                <field name="day_of_week" />
                <field name="session_id" />
                <field name="member_id" />
                <field name="belt_rank" />
                <field name="member_stage" />
                <field name="checkin_dt" />
                <field name="checkout_dt" />
                <field name="duration_min" />
                <field name="source" />
            </list>
        </field>
    </record>

    <record id="action_dojo_attendance_analytics" model="ir.actions.act_window">
        <field name="name">Attendance Analytics</field>
        <field name="res_model">dojo.attendance.report</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{'create': False}</field>
    </record>

</odoo>
