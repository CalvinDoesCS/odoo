<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dojo_member_list" model="ir.ui.view">
        <field name="name">dojo.member.list</field>
        <field name="model">dojo.member</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="role"/>
                <field name="household_id"/>
                <field name="has_portal_login"/>
            </list>
        </field>
    </record>

    <record id="view_dojo_member_form" model="ir.ui.view">
        <field name="name">dojo.member.form</field>
        <field name="model">dojo.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" readonly="1"/>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="role"/>
                        <field name="date_of_birth"/>
                        <field name="household_id"/>
                        <field name="has_portal_login" readonly="1"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="emergency_note"/>
                    </group>
                    <notebook>
                        <page string="Dependents">
                            <field name="dependent_link_ids" readonly="1"/>
                        </page>
                        <page string="Guardian Of">
                            <field name="guardian_for_link_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_dojo_guardian_link_list" model="ir.ui.view">
        <field name="name">dojo.guardian.link.list</field>
        <field name="model">dojo.guardian.link</field>
        <field name="arch" type="xml">
            <list>
                <field name="household_id"/>
                <field name="guardian_member_id"/>
                <field name="student_member_id"/>
                <field name="relation"/>
                <field name="is_primary"/>
            </list>
        </field>
    </record>

    <record id="view_dojo_guardian_link_form" model="ir.ui.view">
        <field name="name">dojo.guardian.link.form</field>
        <field name="model">dojo.guardian.link</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="household_id"/>
                        <field name="guardian_member_id"/>
                        <field name="student_member_id"/>
                        <field name="relation"/>
                        <field name="is_primary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
